<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="church_offering_report_template">
                    <t t-call="web.external_layout">
                      <t t-foreach="doc" t-as="docs">
                        <div class="page">
                            <h2 class="text-center" style="text-transform:uppercase">Offering REPORT</h2>
                            <h5 class="text-center" style="text-transform:uppercase"><u><span t-esc="docs.service_id.name"/></u></h5>
                            <table class="table" style="width:100%;">
                              <thead>
                               <tr class="row">
                                   <th width="150px" margin-left="150px">Date</th>
                                   <th width="150px">Name</th>
                                   <th width="150px">Section</th>
                                   <th width="150px">Amount</th>
                               </tr>
                             </thead>
                             <tbody class='sale_tbody'>
                                <t t-foreach="docs" t-as="offering">
                                  <t t-foreach="offering.offering_line_ids" t-as="offer">
                                    <tr class="row">
                                        <td width="150px" margin-left="150px"><span t-field="offer.date"/></td>
                                        <td width="150px"><span t-esc="docs.name.name"/></td>
                                        <td width="150px"><span t-esc="docs.section_id.name"/></td>
                                        <td width="150px"><span t-field="offer.amount"/></td>
                                    </tr>
                                  </t>
                               </t>
                                  <tr class="row">
                                       <td width="150px" margin-left="150px"></td>
                                       <td width="150px"></td>
                                       <td width="150px"><b>Total</b></td>
                                       <td width="150px"><b t-esc="offering_caculator(docs.offering_line_ids)"/></td>
                                   </tr>
                              </tbody>
                            </table>
                        </div>
                    </t>
            </t>
        </template>
        <template id="church_offering_report">
          <t t-call="web.html_container">
              <t t-foreach="docs" t-as="doc">
                  <t t-call="ng_church.church_offering_report_template"/>
              </t>
          </t>
        </template>
    </data>
</odoo>
