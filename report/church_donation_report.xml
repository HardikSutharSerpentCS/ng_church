<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="church_donation_report_template">
                    <t t-call="web.external_layout">
                      <t t-foreach="doc" t-as="docs">
                        <div class="page">
                            <h2 class="text-center" style="text-transform:uppercase">DONATION REPORT</h2>
                            <h5 class="text-center" style="text-transform:uppercase"><u><span t-field="doc.name.name"/></u></h5>
                            <table class="table" style="width:100%;">
                              <thead>
                               <tr class="row">
                                   <th width="150px" margin-left="150px">Date</th>
                                   <th width="150px">Donor</th>
                                   <th width="150px"></th>
                                   <th width="150px">Amount</th>
                               </tr>
                               </thead>
                               <tbody class='sale_tbody'>
                                <t t-foreach="docs" t-as="donation">
                                  <t t-foreach="donation.donation_line_ids" t-as="donation_line">
                                    <tr class="row">
                                        <td width="150px" margin-left="150px"><span t-field="donation_line.name"/></td>
                                        <td width="150px"><span t-field="donation_line.donor_id"/></td>
                                        <td width="150px"></td>
                                        <td width="150px"><span t-field="donation_line.amount"/></td>
                                    </tr>
                               </t>
                             </t>
                                  <tr class="row">
                                       <td width="150px" margin-left="150px"></td>
                                       <td width="150px" margin-left="150px"></td>
                                       <td width="150px" margin-left="150px"><b>Total</b></td>
                                       <td width="150px" margin-left="150px"><b t-esc="donation_caculator(docs.donation_line_ids)"/></td>
                                   </tr>
                              </tbody>
                            </table>
                        </div>
                    </t>
                </t>
        </template>
        <template id="church_donation_report">
          <t t-call="web.html_container">
              <t t-foreach="docs" t-as="doc">
                  <t t-call="ng_church.church_donation_report_template"/>
              </t>
          </t>
        </template>
    </data>
</odoo>
